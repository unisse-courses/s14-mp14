<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    
<body>
    <%- include('./partials/navbar.ejs') %>

    <div class="create-novel-bg">
        <div class="novel-form-container">
            <h1>New Novel</h1>
            <form action="" class="novel-form" id="novel-form" method="POST">
                <div class="novel-form-input">

                    <label for="novelname">Novel Name</label>
                    <input type="text" placeholder="Enter novel name"  id="novelname" name="novelname"  />

                </div>

                <div class="novel-form-input">

                    <label for="genre">Novel Genre</label>
                    <select name="genre" id="genre">
                        <option value="Action">Action</option>
                        <option value="Fantasy">Fantasy</option>
                        <option value="Horror & Mystery">Horror & Mystery</option>           
                        <option value="Romance">Romance</option>
                        <option value="Comedy">Comedy</option>
                        <option value="Slice of life">Slice of life</option>
                    </select>

                </div>

                <div class="novel-form-input">

                    <label for="content">Novel Story</label>
                    <textarea name="" id="content" cols="30" rows="10" class="content"></textarea>

                </div>

                <button class="submit-form" style="width: 300px;">Create Novel</button>
                
            </form>
         </div>

    </div>

    

        
    

<%- include('./partials/footer.ejs') %>
<script src="scripts/genrePage.js"></script>
    
</body>
</html>